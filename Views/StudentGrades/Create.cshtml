@model StudentGrades.Models.StudentGrades

@{
    ViewBag.Title = "Register";
    List<SelectListItem> studentsName = new List<SelectListItem>();
    studentsName.Add(new SelectListItem
    {
        Text = "MANUEL JOSE UMAÑA",
        Value = "MANUEL JOSE UMAÑA"
    });
    studentsName.Add(new SelectListItem
    {
        Text = "PEDRO CACERES VILORIA",
        Value = "PEDRO CACERES VILORIA",
        Selected = true
    });
    studentsName.Add(new SelectListItem
    {
        Text = "CARLOS VERGARA CIFUENTES",
        Value = "CARLOS VERGARA CIFUENTES"
    });
    studentsName.Add(new SelectListItem
    {
        Text = "MARLON MORENO CARDENAS",
        Value = "MARLON MORENO CARDENAS"
    });
}

<h2>List all grades for all students</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Select a student and register his grade.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Name, studentsName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
